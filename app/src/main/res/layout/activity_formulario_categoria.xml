<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FormularioCategoriaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_formulario_toolbar_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/corToolbar"
        android:theme="@style/toolbar_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/corBranca" />

    <ImageView
        android:id="@+id/activity_formulario_imagem_categoria"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="16sp"
        android:background="@drawable/image"
        android:contentDescription="@string/imagem_categoria_do_local"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_formulario_toolbar_categoria" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_formulario_botao_imagem_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_picture"
        app:layout_constraintBottom_toBottomOf="@id/activity_formulario_imagem_categoria"
        app:layout_constraintEnd_toEndOf="@id/activity_formulario_imagem_categoria"
        app:layout_constraintTop_toBottomOf="@id/activity_formulario_imagem_categoria" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/activity_formulario_descricao_categoria"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_margin="16sp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_formulario_botao_imagem_categoria">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descricao"
            android:inputType="textLongMessage"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_formulario_recyclerview_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_formulario_descricao_categoria"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/activity_formulario_descricao_categoria"
        app:layout_constraintEnd_toEndOf="@id/activity_formulario_descricao_categoria"/>


</androidx.constraintlayout.widget.ConstraintLayout>