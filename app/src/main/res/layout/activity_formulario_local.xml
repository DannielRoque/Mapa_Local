                    android:textAlignment="center"
                    android:textColor="@color/corPreta"
                    app:layout_constraintStart_toStartOf="@id/activity_formulario_categoria_fab"
                    app:layout_constraintEnd_toEndOf="@id/activity_formulario_categoria_fab"
                    app:layout_constraintTop_toBottomOf="@id/activity_formulario_categoria_fab" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>