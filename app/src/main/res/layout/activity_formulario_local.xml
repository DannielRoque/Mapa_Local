<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FormularioLocalActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_formulario_local_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/corToolbar"
        android:theme="@style/toolbar_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/corBranca" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_formulario_local_toolbar"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/activity_formulario_imagem_local"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_margin="16sp"
                android:background="@drawable/image"
                android:contentDescription="@string/imagem_categoria_do_local"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/activity_formulario_botao_imagem_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_picture"
                app:layout_constraintBottom_toBottomOf="@id/activity_formulario_imagem_local"
                app:layout_constraintEnd_toEndOf="@id/activity_formulario_imagem_local"
                app:layout_constraintTop_toBottomOf="@id/activity_formulario_imagem_local" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_formulario_descricao"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16sp"
                app:layout_constraintBottom_toTopOf="@id/activity_formulario_telefone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_formulario_botao_imagem_local">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/descricao"
                    android:inputType="textLongMessage"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_formulario_telefone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                app:layout_constraintEnd_toEndOf="@id/activity_formulario_descricao"
                app:layout_constraintStart_toStartOf="@id/activity_formulario_descricao"
                app:layout_constraintTop_toBottomOf="@id/activity_formulario_descricao">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/telefone"
                    android:inputType="textLongMessage"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/activity_formulario_botao_categoria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:background="@drawable/button_personalizado"
                android:drawableStart="@drawable/click"
                android:text="@string/selecionar_categoria"
                android:textAlignment="inherit"
                android:textColor="@color/corBranca"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/activity_formulario_telefone"
                app:layout_constraintStart_toStartOf="@id/activity_formulario_telefone"
                app:layout_constraintTop_toBottomOf="@id/activity_formulario_telefone" />

            <Button
                android:id="@+id/activity_formulario_botao_categoria_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:background="@drawable/button_personalizado"
                android:drawableStart="@drawable/click"
                android:text="@string/selecionar_categoria"
                android:textAlignment="inherit"
                android:textColor="@color/corBranca"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/activity_formulario_telefone"
                app:layout_constraintStart_toStartOf="@id/activity_formulario_telefone"
                app:layout_constraintTop_toBottomOf="@id/activity_formulario_telefone" />

            <TextView
                android:id="@+id/campo_lat_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/activity_local_icone_categoria"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_formulario_botao_categoria" />

            <TextView
                android:id="@+id/activity_formulario_campo_categoria_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_formulario_botao_categoria" />

            <TextView
                android:id="@+id/activity_formulario_campo_categoria_descricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/corPreta"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/activity_local_icone_categoria"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_local_icone_categoria"
                app:layout_constraintTop_toTopOf="@id/activity_local_icone_categoria" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/corBranca"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_nested"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/activity_formulario_categoria_fab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16sp"
                    android:background="@drawable/button_borda"
                    android:text="Adicionar nova categoria"
                    android:textColor="@color/corToolbar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
