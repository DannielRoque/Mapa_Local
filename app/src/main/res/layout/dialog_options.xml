<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/phone_options"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@id/options_ligar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/options_ligar" />

        <TextView
            android:id="@+id/options_ligar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/ligar"
            android:textAlignment="center"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/corAux"
            app:layout_constraintBottom_toTopOf="@id/options_site"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/options_ligar" />

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/internet_options"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@id/options_site"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/options_site" />

        <TextView
            android:id="@+id/options_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/visitar_site"
            android:background="?android:attr/selectableItemBackground"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/options_ligar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/corAux"
            app:layout_constraintBottom_toTopOf="@id/options_editar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/options_site" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/edit_options"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@id/options_editar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/options_editar" />

        <TextView
            android:id="@+id/options_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/editar"
            android:textAlignment="center"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/options_site" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/corAux"
            app:layout_constraintBottom_toTopOf="@id/options_excluir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/options_editar" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="40dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/trash_option"
            app:layout_constraintBottom_toBottomOf="@id/options_excluir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/options_excluir" />

        <TextView
            android:id="@+id/options_excluir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/deletar"
            android:textAlignment="center"
            android:textSize="24sp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/options_editar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>